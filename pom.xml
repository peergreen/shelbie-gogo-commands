<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>commands-pom</artifactId>
    <groupId>com.peergreen.shelbie</groupId>
    <version>1.1</version>
    <relativePath>../commands-pom/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>gogo-commands</artifactId>
  <packaging>bundle</packaging>
  <version>1.0.2-SNAPSHOT</version>

  <name>Peergreen Gogo Commands</name>
  <description>
    This Bundle simply encapsulate the 'org.apache.felix.gogo.command' bundle to gain better control on available commands.
  </description>

  <scm>
    <connection>scm:git:https://forge.peergreen.com/git/git/shelbie/gogo-commands.git</connection>
    <developerConnection>scm:git:https://forge.peergreen.com/git/git/shelbie/gogo-commands.git</developerConnection>
    <url>https://forge.peergreen.com/git/summary/?r=shelbie/gogo-commands.git</url>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <apache-rat-plugin.ignoreErrors>false</apache-rat-plugin.ignoreErrors>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <version>5.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.gogo.command</artifactId>
      <version>0.12.0</version>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <id>peergreen.release</id>
      <name>Peergreen Release Nexus</name>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>https://forge.peergreen.com/nexus/content/repositories/releases/</url>
      <layout>default</layout>
    </repository>
  </repositories>


</project>
